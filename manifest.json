
{
  "name": "Co-op extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "Coop.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    { "js": ["scripts/content.js", "scripts/orderByHiringPercentage.js"],
      "matches": [
        "https://waterlooworks.uwaterloo.ca/myAccount/co-op/coop-postings.htm"
      ] }
  ],
  "web_accessible_resources": [{
    "resources": ["scripts/postingsPageObject.js"],
    "matches": ["<all_urls>"]
  }]
}
